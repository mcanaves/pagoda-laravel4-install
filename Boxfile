web1:
 name: laravelWeb
 document_root: public
 shared_writable_dirs:
  - app/storage/cache
  - app/storage/logs
  - app/storage/meta
  - app/storage/sessions
  - app/storage/views
 php_version: 5.4.14
 php_extensions:
  - pdo_mysql
  - mcrypt
  - eaccelerator
  - redis
  - memcached
  - curl
  - zip
 after_build:
  - "if [ ! -f composer.phar ]; then curl -s http://getcomposer.org/installer | php; fi; php composer.phar install"
 before_deploy:
  - "php artisan migrate"
 after_deploy:
  - "rm -f app/storage/cache/*"
  - "rm -f app/storage/views/*"
